# API Configuration
# Production API endpoint with HTTPS protocol
VITE_API_BASE_URL=https://api.enrollment-system.com

# Authentication Configuration
# Production-specific storage prefix for secure token management
VITE_AUTH_STORAGE_PREFIX=enrollment_system_prod
# Production token encryption key (should be set via CI/CD pipeline)
VITE_AUTH_ENCRYPTION_KEY=
# Token expiry duration in hours
VITE_AUTH_TOKEN_EXPIRY=1h

# Application Settings
# Production application title
VITE_APP_TITLE=Enrollment System
# API request timeout in milliseconds (30 seconds)
VITE_API_TIMEOUT=30000
# Maximum file upload size in bytes (10MB)
VITE_MAX_UPLOAD_SIZE=10485760

# Security Settings
# Enable Multi-Factor Authentication in production
VITE_MFA_ENABLED=true
# Enable hardware key authentication
VITE_HARDWARE_KEY_ENABLED=true
# Session timeout in milliseconds (15 minutes)
VITE_SESSION_TIMEOUT=900000
# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5
# Login lockout duration in seconds (30 minutes)
VITE_LOCKOUT_DURATION=1800

# UI/UX Configuration
# Default theme mode
VITE_DEFAULT_THEME=light
# Enable high contrast mode for accessibility
VITE_HIGH_CONTRAST_ENABLED=true
# Enable real-time updates
VITE_REALTIME_UPDATES=true
# Toast notification duration in milliseconds
VITE_TOAST_DURATION=5000

# Performance Settings
# Enable response caching
VITE_ENABLE_CACHE=true
# Cache duration in seconds
VITE_CACHE_DURATION=3600
# Enable request retries
VITE_ENABLE_RETRIES=true
# Maximum retry attempts
VITE_MAX_RETRY_ATTEMPTS=3

# Monitoring and Logging
# Enable production logging
VITE_ENABLE_LOGGING=true
# Log level for production (error, warn, info)
VITE_LOG_LEVEL=error
# Enable performance monitoring
VITE_ENABLE_MONITORING=true
# Enable error tracking
VITE_ENABLE_ERROR_TRACKING=true

# Feature Flags
# Enable document preview
VITE_FEATURE_DOCUMENT_PREVIEW=true
# Enable bulk operations
VITE_FEATURE_BULK_OPERATIONS=true
# Enable advanced search
VITE_FEATURE_ADVANCED_SEARCH=true
# Enable workflow automation
VITE_FEATURE_WORKFLOW_AUTOMATION=true