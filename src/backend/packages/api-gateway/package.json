{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for enrollment system microservices handling centralized request routing, authentication, rate limiting, and security",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage --coverageReporters='text-summary' --coverageReporters='lcov'",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "security:audit": "npm audit && snyk test",
    "docker:build": "docker build -t api-gateway ."
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "bull": "^4.11.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status": "^1.6.0",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "prom-client": "^14.0.0",
    "rate-limit-redis": "^3.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "commitlint": "^17.7.1",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.6.2",
    "jest-mock-extended": "^3.0.0",
    "nodemon": "^3.0.1",
    "snyk": "^1.1190.0",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  }
}